<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FloatingDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/black_26</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall">
        <item name="android:textColor">@color/black_26</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextDialogTitle">
        <item name="android:textColor">@color/black_26</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialogDescription">
        <item name="android:textColor">@color/black_26</item>
    </style>

    <style name="Button">
        <item name="textAllCaps">false</item>
    </style>

</resources>
