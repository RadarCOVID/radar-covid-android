<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FloatingDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="Title">
        <item name="fontFamily">@font/multi_bold</item>
    </style>

    <style name="TitleSmall" parent="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleMedium" parent="Title">
        <item name="android:textColor">@color/black_26</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleBig" parent="Title">
        <item name="android:lineSpacingMultiplier">0.9</item>
        <item name="android:textColor">@color/black_26</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleExtraBold">
        <item name="fontFamily">@font/multi_extrabold</item>
    </style>

    <style name="TitleExtraBoldSmall" parent="TitleExtraBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSmall">
        <item name="android:fontFamily">@font/multi_light</item>
        <item name="android:textColor">@color/black_26</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextNormal">
        <item name="fontFamily">@font/multi_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextDialogTitle" parent="Title">
        <item name="android:textColor">@color/black_26</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDialogDescription">
        <item name="fontFamily">@font/multi_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_26</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/multi_semibold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonWhite" parent="Button">
        <item name="android:textColor">@color/black_26</item>
        <item name="android:background">@drawable/shape_rounded_corners_white</item>
    </style>

    <style name="ButtonNormal" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/color_tint_button_normal</item>
        <item name="backgroundTintMode">src_over</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

</resources>
