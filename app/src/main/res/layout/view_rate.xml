<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <es.gob.radarcovid.common.view.SelectableGroupLinearLayout
        android:id="@+id/wrapperContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_semibold"
        android:text="@string/statisfaction_min"
        android:textColor="@color/black_26"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/wrapperContent"
        app:layout_constraintTop_toBottomOf="@id/wrapperContent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/muli_semibold"
        android:text="@string/statisfaction_max"
        android:textColor="@color/black_26"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/wrapperContent"
        app:layout_constraintTop_toBottomOf="@id/wrapperContent" />

</androidx.constraintlayout.widget.ConstraintLayout>