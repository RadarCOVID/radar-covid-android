<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/TitleExtraBoldSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:text="@string/exposure_detail_what_to_do"
        android:textSize="22sp"
        app:isHeading="true"
        app:labelId="EXPOSITION_HIGH_WHAT_TO_DO_TITLE" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:isHeading="true"
        android:text="@string/exposure_detail_phone_title"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:labelId="EXPOSITION_HIGH_WHAT_TO_DO_DESCRIPTION" />

    <fragment
        android:id="@+id/fragmentRegionInfo"
        android:name="es.gob.radarcovid.features.exposure.region.view.RegionInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" />

    <include
        android:id="@+id/wrapperContactButton"
        layout="@layout/layout_contact_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:visibility="gone" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/exposure_detail_high_tips_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_TITLE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_security_distance" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:text="@string/exposure_detail_high_tip_1"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_avoid_crowds" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="@string/exposure_detail_high_tip_2"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_avoid_vulnerable_people" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/exposure_detail_high_tip_3"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_use_mask" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:text="@string/exposure_detail_high_tip_4"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wash_your_hands" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="@string/exposure_detail_high_tip_5"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_5" />
    </LinearLayout>

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/exposure_detail_symptoms_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:labelId="EXPOSITION_HIGH_BULLET_TITLE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cough" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSemibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/exposure_detail_symptom_cough"
            app:labelId="EXPOSITION_HIGH_BULLET_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fever" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSemibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="@string/exposure_detail_symptom_fever"
            app:labelId="EXPOSITION_HIGH_BULLET_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_breathing_difficulty" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSemibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="@string/exposure_detail_symptom_taste_and_smell"
            app:labelId="EXPOSITION_HIGH_BULLET_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_taste_and_smell" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSemibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/exposure_detail_symptom_taste_and_smell"
            app:labelId="EXPOSITION_HIGH_BULLET_4" />
    </LinearLayout>

    <es.gob.radarcovid.common.view.LabelTextView
        android:id="@+id/textViewOtherSymptomsHigh"
        style="@style/TitleTipSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/exposure_detail_high_other_symptoms"
        android:textSize="16sp"
        android:textColorLink="@color/black_26"
        app:isLink="true"
        app:labelId="EXPOSITION_HIGH_OTHER_SYMPTOMS" />

    <es.gob.radarcovid.common.view.LabelTextView
        android:id="@+id/textViewSymptomsHighWhatToDo"
        style="@style/TitleTipSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/exposure_detail_high_symptoms_what_to_do"
        android:textSize="16sp"
        android:textColorLink="@color/black_26"
        app:isLink="true"
        app:labelId="EXPOSITION_HIGH_SYMPTOMS_WHAT_TO_DO" />

    <es.gob.radarcovid.common.view.MoreInfoButton
        android:id="@+id/buttonMoreInfoHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/TitleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exposure_detail_acknowledgement_message"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:labelId="THANKS" />

</LinearLayout>