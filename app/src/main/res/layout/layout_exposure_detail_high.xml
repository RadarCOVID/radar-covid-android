<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/TitleExtraBoldSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:text="@string/exposure_detail_what_to_do"
        android:textSize="22sp"
        app:labelId="EXPOSITION_HIGH_WHAT_TO_DO_TITLE" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/exposure_detail_phone_title"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:labelId="EXPOSITION_HIGH_WHAT_TO_DO_DESCRIPTION" />

    <fragment
        android:id="@+id/fragmentRegionInfo"
        android:name="es.gob.radarcovid.features.exposure.region.view.RegionInfoFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" />

    <include
        android:id="@+id/wrapperContactButton"
        layout="@layout/layout_contact_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:visibility="gone" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/exposure_detail_synthoms_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:labelId="EXPOSITION_HIGH_BULLET_TITLE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cough" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSemibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/exposure_detail_symptom_cough"
            app:labelId="EXPOSITION_HIGH_BULLET_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fever" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSemibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="@string/exposure_detail_symptom_fever"
            app:labelId="EXPOSITION_HIGH_BULLET_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_taste_and_smell" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSemibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="@string/exposure_detail_symptom_taste_and_smell"
            app:labelId="EXPOSITION_HIGH_BULLET_3" />
    </LinearLayout>

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/exposure_detail_high_tips_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_TITLE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stay_home" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:text="@string/exposure_detail_tip_home"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_distance_people" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:text="@string/exposure_detail_tip_avoid_people"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_use_mask" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="@string/exposure_detail_tip_mask"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wash_your_hands" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="@string/exposure_detail_tip_wash_hands"
            app:labelId="EXPOSITION_HIGH_RECOMENDATIONS_BULLET_4" />
    </LinearLayout>

    <es.gob.radarcovid.common.view.MoreInfoButton
        android:id="@+id/buttonMoreInfoHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/TitleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exposure_detail_acknowledgement_message"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:labelId="THANKS" />

</LinearLayout>