<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/wrapperCough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/wrapperFever"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_cough" />

        <TextView
            style="@style/TextSemibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exposition_detail_symptom_cough" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapperFever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_fever" />

        <TextView
            style="@style/TextSemibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exposition_detail_symptom_fever" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapperTasteAndSmell"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/wrapperFever"
        app:layout_constraintStart_toStartOf="@id/wrapperCough"
        app:layout_constraintTop_toBottomOf="@id/wrapperCough">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_taste_and_smell" />

        <TextView
            style="@style/TextSemibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exposition_detail_symptom_taste_and_smell" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>