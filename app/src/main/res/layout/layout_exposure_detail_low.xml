<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/TitleExtraBoldSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:text="@string/exposure_detail_what_to_do"
        android:textSize="22sp"
        app:labelId="EXPOSITION_LOW_WHAT_TO_DO_TITLE" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:text="@string/exposure_detail_tips_title_low"
        android:textColor="@color/green"
        android:textSize="20sp"
        app:labelId="EXPOSITION_LOW_WHAT_TO_DO_DESCRIPTION" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_distance_people" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:text="@string/exposure_detail_tip_distance"
            app:labelId="EXPOSITION_LOW_BULLET_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_use_mask" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="@string/exposure_detail_tip_mask"
            app:labelId="EXPOSITION_LOW_BULLET_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wash_your_hands" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="@string/exposure_detail_tip_wash_hands"
            app:labelId="EXPOSITION_LOW_BULLET_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cough_hand" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:text="@string/exposure_detail_tip_cough"
            app:labelId="EXPOSITION_LOW_BULLET_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rules" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:text="@string/exposure_detail_tip_rules"
            app:labelId="EXPOSITION_LOW_BULLET_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clinic" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="@string/exposure_detail_tip_clinic"
            app:labelId="EXPOSITION_LOW_BULLET_6" />
    </LinearLayout>

    <es.gob.radarcovid.common.view.MoreInfoButton
        android:id="@+id/buttonMoreInfoLow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/TitleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exposure_detail_acknowledgement_message"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:labelId="THANKS" />

</LinearLayout>