<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/TextSmallBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/exposure_detail_infected_p1"
        app:labelId="EXPOSITION_EXPOSED_PARAGRAPH_1" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/TitleExtraBoldSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/exposure_detail_what_to_do"
        android:textSize="22sp"
        app:labelId="EXPOSITION_EXPOSED_WHAT_TO_DO_TITLE" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="@string/exposure_detail_infected_what_to_do_subtitle"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:labelId="EXPOSITION_EXPOSED_WHAT_TO_DO_DESCRIPTION" />

    <es.gob.radarcovid.common.view.LabelTextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/exposure_detail_infected_tips_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:labelId="EXPOSITION_EXPOSED_RECOMENDATIONS_BULLET_TITLE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_stay_home" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@string/confirmation_tip_1"
            app:labelId="EXPOSITION_EXPOSED_RECOMENDATIONS_BULLET_1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp"
            android:src="@drawable/ic_distance_people" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@string/confirmation_tip_2"
            app:labelId="EXPOSITION_EXPOSED_RECOMENDATIONS_BULLET_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:src="@drawable/ic_use_mask" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@string/confirmation_tip_3"
            app:labelId="EXPOSITION_EXPOSED_RECOMENDATIONS_BULLET_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_wash_your_hands" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@string/confirmation_tip_4"
            app:labelId="EXPOSITION_EXPOSED_RECOMENDATIONS_BULLET_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_clinic" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@string/confirmation_tip_5"
            app:labelId="EXPOSITION_EXPOSED_RECOMENDATIONS_BULLET_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_emergency_number" />

        <es.gob.radarcovid.common.view.LabelTextView
            style="@style/TextSmallBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/confirmation_tip_6"
            app:labelId="EXPOSITION_EXPOSED_RECOMENDATIONS_BULLET_6" />

    </LinearLayout>

    <es.gob.radarcovid.common.view.MoreInfoButton
        android:id="@+id/buttonMoreInfoInfected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />

    <TextView
        style="@style/TitleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exposure_detail_acknowledgement_message"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>