<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".features.onboarding.pages.legal.view.LegalInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_content">

        <TextView
            android:id="@+id/textViewTitleSmall"
            style="@style/TitleXSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/legal_info_title_small"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="13dp"
            android:text="@string/legal_info_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitleSmall" />

        <TextView
            android:id="@+id/textViewDescription"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/legal_info_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

        <Button
            android:id="@+id/buttonTermsAndConditions"
            style="@style/ButtonWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="@string/legal_info_terms_and_conditions"
            app:layout_constraintTop_toBottomOf="@id/textViewDescription" />

        <com.indra.coronaradar.common.view.CMCheckBox
            android:id="@+id/checkBoxTermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/legal_info_check"
            app:layout_constraintTop_toBottomOf="@id/buttonTermsAndConditions" />

        <LinearLayout
            android:id="@+id/wrapperCheckWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_rounded_corners_white"
            android:backgroundTint="@color/red"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="14dp"
            android:paddingEnd="20dp"
            android:paddingBottom="14dp"
            app:layout_constraintTop_toBottomOf="@id/checkBoxTermsAndConditions">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_warning" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="@string/legal_info_check_warning"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonAccept"
            style="@style/ButtonNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="9dp"
            android:enabled="false"
            android:text="@string/legal_info_button"
            app:layout_constraintTop_toBottomOf="@id/wrapperCheckWarning" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>