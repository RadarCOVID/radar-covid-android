<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.gob.covidradar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name="es.gob.covidradar.CovidRadarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".features.splash.view.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.onboarding.view.OnboardingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.onboarding.pages.legal.view.LegalInfoFragment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.onboarding.pages.legal.view.TermsAndConditionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.onboarding.pages.legal.view.PrivacyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.main.view.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.covidreport.form.view.CovidReportActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.exposure.view.ExposureActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.covidreport.confirmation.Confirmation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.poll.main.view.PollActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".features.poll.completed.view.PollCompletedActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>